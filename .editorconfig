root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

# Files are generated by tokens.studio
# and it doesn't generate a final new line
[tokens/*]
insert_final_newline=false

# Files are generated by style-dictionary
# and it doesn't generate a final new line
[assets/**/*]
insert_final_newline=false

[assets/android/*]
indent_style = space
indent_size = 4
